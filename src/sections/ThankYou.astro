---
import { icons } from 'lucide-static';

const socials = [
  { name: 'LinkedIn', icon: icons['linkedin'], href: 'https://linkedin.com/in/wilbert-chandra-630b0121a' },
  { name: 'GitHub', icon: icons['github'], href: 'https://github.com/GilbertKrantz' },
  { name: 'Email', icon: icons['mail'], href: 'mailto:wilbertchandra.official@gmail.com' }
];
---

<section
  class="thank-you-section section-pinned bg-[#0B0B0D] z-[80] flex items-center justify-center"
>
  {/* Horizontal Line */}
  <div
    class="thank-you-line absolute top-1/2 left-[10vw] right-[10vw] h-px line-secondary origin-center scale-x-0"
  ></div>

  {/* Centered Content */}
  <div class="relative text-center px-6 z-10">
    {/* Headline */}
    <h2
      class="thank-you-headline text-[clamp(40px,14vw,120px)] md:text-[clamp(60px,10vw,140px)] font-bold text-[#F4F4F5] leading-[0.85] mb-4 md:mb-6 opacity-0"
    >
      Thanks.
    </h2>

    {/* Subline */}
    <p
      class="thank-you-subline text-[#A7A7AA] text-base md:text-xl mb-8 md:mb-12 opacity-0"
    >
      Open to collaborations, research, and product work.
    </p>

    {/* Socials */}
    <div
      class="thank-you-socials flex flex-row items-center justify-center gap-6 md:gap-8 opacity-0"
    >
      {socials.map((social) => {
        return (
          <a
            href={social.href}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex flex-col items-center gap-2 md:gap-3 text-[#A7A7AA] hover:text-lime transition-colors"
          >
            <div class="w-10 md:w-12 h-10 md:h-12 border border-white/20 flex items-center justify-center group-hover:border-lime transition-colors">
              <svg class="w-4 md:w-5 h-4 md:h-5" set:html={social.icon} />
            </div>
            <span class="font-mono text-xs uppercase tracking-[0.14em]">
              {social.name}
            </span>
          </a>
        );
      })}
    </div>
  </div>
</section>

<script>
  import gsap from 'gsap';
  import ScrollTrigger from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const initThankYou = () => {
    // Clean up existing ScrollTrigger instances
    ScrollTrigger.getAll().forEach((trigger) => {
      if (trigger.vars.trigger === '.thank-you-section') {
        trigger.kill();
      }
    });

    const section = document.querySelector('.thank-you-section');
    if (!section) return;

    const headline = section.querySelector('.thank-you-headline');
    const subline = section.querySelector('.thank-you-subline');
    const socials = section.querySelector('.thank-you-socials');
    const line = section.querySelector('.thank-you-line');

    const scrollTl = gsap.timeline({
      scrollTrigger: {
        trigger: section,
        start: 'top top',
        end: '+=120%',
        pin: true,
        scrub: 0.6,
      }
    });

    // ENTRANCE (0-30%)
    scrollTl.fromTo(headline,
      { y: '30vh', opacity: 0 },
      { y: 0, opacity: 1, ease: 'none' },
      0
    );

    scrollTl.fromTo(subline,
      { y: '10vh', opacity: 0 },
      { y: 0, opacity: 1, ease: 'none' },
      0.10
    );

    scrollTl.fromTo(socials,
      { y: '10vh', opacity: 0 },
      { y: 0, opacity: 1, ease: 'none' },
      0.15
    );

    scrollTl.fromTo(line,
      { scaleX: 0 },
      { scaleX: 1, ease: 'none', transformOrigin: 'center' },
      0.20
    );

    // EXIT (70-100%)
    scrollTl.fromTo(headline,
      { opacity: 1 },
      { opacity: 0.35, ease: 'power2.in' },
      0.70
    );

    scrollTl.fromTo(subline,
      { opacity: 1 },
      { opacity: 0.2, ease: 'power2.in' },
      0.72
    );

    scrollTl.fromTo(socials,
      { opacity: 1 },
      { opacity: 0.2, ease: 'power2.in' },
      0.74
    );
  };

  initThankYou();
  document.addEventListener('astro:after-swap', initThankYou);
</script>
