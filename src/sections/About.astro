---
import { ArrowRight } from 'lucide-react';
---

<section
  id="about"
  class="about-section section-pinned bg-background z-20 flex items-center justify-center"
>
  {/* Top-right label */}
  <div
    class="about-label absolute right-6 md:right-[7vw] top-[10vh] font-mono text-xs uppercase tracking-[0.14em] text-muted-foreground opacity-0"
  >
    ABOUT
  </div>

  {/* Decorative Element */}
  <div
    class="about-decor absolute left-6 md:left-[7vw] top-[15vh] opacity-0"
  >
    <div class="w-16 md:w-24 h-16 md:h-24 border border-lime/30 relative">
      <div class="absolute -top-2 -left-2 w-4 h-4 border-t border-l border-lime"></div>
      <div class="absolute -bottom-2 -right-2 w-4 h-4 border-b border-r border-lime"></div>
    </div>
  </div>

  {/* Main Statement - Centered */}
  <div
    class="about-statement relative w-full px-6 md:px-[15vw] opacity-0"
  >
    <h2 class="text-[clamp(28px,8vw,64px)] md:text-[clamp(40px,5vw,72px)] font-bold text-foreground leading-[1] mb-6 md:mb-8 text-center">
      I build robust data<br class="hidden md:block" /> and AI systems.
    </h2>
    <div
      class="about-line w-[40vw] md:w-[20vw] h-px line-primary mx-auto mb-6 md:mb-8 origin-left scale-x-0"
    ></div>
    <p class="text-muted-foreground text-base md:text-lg leading-relaxed mb-6 md:mb-8 max-w-[90vw] md:max-w-[50vw] mx-auto text-center">
      I design scalable data engineering pipelines, distributed AI systems,
      and production-ready architectures that make data reliable and intelligent.
    </p>
    <div class="flex justify-center">
      <a
        href="#experience"
        class="group inline-flex items-center gap-3 text-lime font-mono text-sm uppercase tracking-[0.14em] hover:text-white transition-colors"
      >
        <span class="lime-square mr-2"></span>
        Read more
        <ArrowRight className="w-4 h-4 group-hover:translate-x-1 transition-transform" />
      </a>
    </div>
  </div>

  {/* Bottom microcopy */}
  <div
    class="about-microcopy absolute left-6 md:left-[7vw] bottom-[8vh] opacity-0"
  >
    <p class="font-mono text-xs uppercase tracking-[0.14em] text-muted-foreground">
      Binus University â€” GPA 3.87/4.00
    </p>
  </div>

  {/* Corner Decoration */}
  <div class="absolute bottom-8 right-8 w-4 h-4 border-b border-r border-white/20"></div>
</section>

<script>
  import gsap from 'gsap';
  import ScrollTrigger from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const initAbout = () => {
    const section = document.querySelector('.about-section');
    if (!section) return;

    const label = section.querySelector('.about-label');
    const decor = section.querySelector('.about-decor');
    const statement = section.querySelector('.about-statement');
    const line = section.querySelector('.about-line');
    const microcopy = section.querySelector('.about-microcopy');

    const scrollTl = gsap.timeline({
      scrollTrigger: {
        trigger: section,
        start: 'top top',
        end: '+=100%',
        pin: true,
        scrub: 0.6,
      }
    });

    // ENTRANCE (0-30%)
    scrollTl.fromTo(statement,
      { y: '20vh', opacity: 0 },
      { y: 0, opacity: 1, ease: 'none' },
      0
    );

    scrollTl.fromTo(line,
      { scaleX: 0 },
      { scaleX: 1, ease: 'none', transformOrigin: 'center' },
      0.10
    );

    scrollTl.fromTo(microcopy,
      { y: '10vh', opacity: 0 },
      { y: 0, opacity: 1, ease: 'none' },
      0.15
    );

    scrollTl.fromTo(label,
      { opacity: 0 },
      { opacity: 1, ease: 'none' },
      0.10
    );

    scrollTl.fromTo(decor,
      { opacity: 0, scale: 0.8 },
      { opacity: 1, scale: 1, ease: 'none' },
      0.20
    );

    // EXIT (70-100%)
    scrollTl.fromTo(statement,
      { y: 0, opacity: 1 },
      { y: '-15vh', opacity: 0.25, ease: 'power2.in' },
      0.70
    );

    scrollTl.fromTo(microcopy,
      { opacity: 1 },
      { opacity: 0.2, ease: 'power2.in' },
      0.75
    );

    scrollTl.fromTo(label,
      { opacity: 1 },
      { opacity: 0.2, ease: 'power2.in' },
      0.75
    );

    scrollTl.fromTo(decor,
      { opacity: 1 },
      { opacity: 0.1, ease: 'power2.in' },
      0.75
    );
  };

  // Run on page load and view transition
  initAbout();
  document.addEventListener('astro:after-swap', initAbout);
</script>
